{
  "name": "Denver-ReImagine",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": ">=8.3.0",
    "yarn": ">=1.2"
  },
  "scripts": {
    "ci:start-app-for-test":
      "concurrently \"yarn start\" \"serve -s client/build -p 3000\" --browser chrome",
    "ci:test": "cypress run --browser chrome",
    "client": "(cd ./client && yarn start)",
    "client-build": "(cd ./client && yarn run build)",
    "client-install": "(cd ./client && yarn install)",
    "cypress": "cypress",
    "dev": "concurrently \"yarn client\"",
    "eslint-check":
      "eslint --print-config .eslintrc.json | eslint-config-prettier-check",
    "heroku-postbuild":
      "YARN_PRODUCTION=false yarn run client-install && yarn run client-build",
    "lint": "eslint . ",
    "lint-server": "yarn prettier-eslint backend/**/*.js --write",
    "lint-client": "yarn prettier-eslint client/src/**/*.js --write",
    "precommit": "lint-staged",
    "postinstall": "yarn install --cwd client",
    "test-dev": "cross-env NODE_ENV=test yarn dev"
  },
  "lint-staged": {
    "*.{js,json}": ["prettier-eslint --write", "git add"]
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "async": "^2.5.0",
    "concurrently": "^3.5.1"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "cross-env": "^5.1.1",
    "cypress": "^3.0.2",
    "cypress-testing-library": "^2.0.0",
    "eslint": "^4.12.1",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.39.1",
    "eslint-plugin-import": "^2.6.1",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-node": "4.2.2",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.4.0",
    "husky": "^0.14.3",
    "lint-staged": "^5.0.0",
    "prettier": "^1.10.0",
    "prettier-eslint": "^8.2.2",
    "prettier-eslint-cli": "^4.4.0"
  }
}
